<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.gpscamapplication.Activities.CameraGPS">

    <FrameLayout
        android:id="@+id/cameraPreview"
        android:layout_width="fill_parent"
        android:layout_height="380dp">
    </FrameLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <Button
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:text="TAKE A PHOTO"
            android:onClick="takePhoto">

        </Button>
        <Button
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="G">

        </Button>
    </LinearLayout>

    <fragment

        android:name="com.example.admin.gpscamapplication.Fragments.GPSFragment"
        android:id="@+id/GPSFragment"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        class="com.example.admin.gpscamapplication.Fragments.GPSFragment"
        tools:layout="@layout/fragment_gps" />


</LinearLayout>
